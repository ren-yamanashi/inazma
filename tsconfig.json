{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "/",
    "outDir": "./dist",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "inazma": ["src/index.ts"],
    },
    "types": [
      "@types/node",
      "vitest/globals",
      "vitest/importMeta",
    ]
    
  },
  "include": [
    "sample/db.schema.ts",
    "env/env.d.ts",
    "src/**/*",
    "src/__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
