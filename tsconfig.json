{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "/",
    "outDir": "./dist",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "inazma": ["src/index.ts"],
    },
    "moduleResolution": "node"
  },
  "include": [
    ".out/**/*",
    "env/env.d.ts",
    "src/**/*",
    "src/__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
