{
  "name": "inazma",
  "version": "0.1.0",
  "main": "/src/index.ts",
  "license": "MIT",
  "volta": {
    "node": "18.17.0",
    "yarn": "1.22.11"
  },
  "scripts": {
    "dev": "export MYSQL_USERNAME=root && export MYSQL_PASSWORD=password && yarn build && node dist/index.js",
    "build": "export $(cat env/.env | grep -v ^#) && esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "build:watch": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --watch=forever & nodemon dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext ts --ext js",
    "docker-start": "docker-compose up -d",
    "docker-stop": "docker-compose down",
    "mysql-start": "docker exec -it mysql_container mysql -uroot -ppassword"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.@(ts)": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.4",
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "esbuild": "^0.17.15",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "jest": "^29.6.4",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mysql": "^2.18.1"
  }
}
